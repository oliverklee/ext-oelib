{
    "name": "oliverklee/oelib",
    "description": "Useful stuff for TYPO3 extension development: helper functions for unit testing, templating and automatic configuration checks.",
    "type": "typo3-cms-extension",
    "keywords": [
        "extension",
        "library",
        "templating"
    ],
    "homepage": "https://www.oliverklee.de/typo3-services/typo3-extensions/",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "source": "https://github.com/oliverklee/ext-oelib",
        "issues": "https://github.com/oliverklee/ext-oelib/issues"
    },
    "require": {
        "php": "~7.0 || ~7.1 || ~7.2 || ~7.3 || ~7.4",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-zip": "*",
        "pelago/emogrifier": "^3.0",
        "psr/log": "^1.0",
        "swiftmailer/swiftmailer": "^5.4",
        "typo3/cms-core": "^8.7.9 || ^9.5.7",
        "typo3/cms-extbase": "^8.7 || ^9.5",
        "typo3/cms-fluid": "^8.7 || ^9.5",
        "typo3/cms-frontend": "^8.7 || ^9.5",
        "typo3/cms-lang": "^8.7 || ^9.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "helhum/typo3-console": "^5.8.2",
        "mikey179/vfsstream": "^1.6.8",
        "nimut/testing-framework": "^5.0.0",
        "oliverklee/user-oelibtest": "@dev",
        "oliverklee/user-oelibtest2": "@dev",
        "phpunit/phpunit": "^6.5.14",
        "sjbr/static-info-tables": "@dev",
        "squizlabs/php_codesniffer": "^3.5.4"
    },
    "conflict": {
        "sjbr/static-info-tables": "6.7.1",
        "typo3/cms-composer-installers": "<1.4.6"
    },
    "replace": {
        "typo3-ter/oelib": "self.version"
    },
    "suggest": {
        "sjbr/static-info-tables": "^6.7"
    },
    "autoload": {
        "classmap": [
            "Classes"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OliverKlee\\Oelib\\Tests\\": "Tests/"
        }
    },
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "TestExtensions/*"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 1000,
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "php:fix": "php-cs-fixer --config=Configuration/php-cs-fixer.php fix Classes Tests && phpcbf Classes Configuration Tests TestExtensions",
        "ci:php:lint": "find *.php Classes Configuration TestExtensions Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:php:sniff": "phpcs Classes Configuration Tests TestExtensions",
        "ci:php:fixer": "php-cs-fixer --config=Configuration/php-cs-fixer.php fix --dry-run -v --show-progress=dots --diff-format=udiff Classes Tests",
        "ci:tests:unit": "phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/",
        "ci:tests:functional": "find 'Tests/Functional' -wholename '*Test.php' | parallel --gnu 'echo; echo \"Running functional test suite {}\"; phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml {}';",
        "ci:tests": [
            "@ci:tests:unit",
            "@ci:tests:functional"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint",
            "@ci:php:sniff",
            "@ci:php:fixer"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/oelib\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "oelib",
            "web-dir": ".Build/public"
        },
        "helhum/typo3-console": {
            "install-extension-dummy": "0"
        }
    }
}
